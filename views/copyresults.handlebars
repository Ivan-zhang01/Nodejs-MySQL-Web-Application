<div class="page-header">
	<h1 id="database_selected">Copy</h1>
</div>

<button type="button" class="btn btn-success" data-toggle="collapse" data-target="#hform">Add Reccord</button>
<br>
<br>
<div id="hform" class="container collapse">
	<form class="form-inline" role="form" align="right" method="POST" action="/copy/create">
	   <div class="form-group col-sm-2">
		      <label for="bookCode">Book Code</label>
			  <input type="text" class="form-control" id="" placeholder="Book Code" name="bookCode">
	   </div>
	   <div class="form-group col-sm-2">
		      <label for="branchNUm">Branch Number</label>
			  <input type="text" class="form-control" id="" placeholder="Branch Number" name="branchNum">
		</div>
	    <div class="form-group col-sm-2">
		      <label for="copyNum">Copy Number</label>
			  <input type="text" class="form-control" id="" placeholder="Copy Number" name="copyNum">
		</div>
		 <div class="form-group col-sm-2">
		      <label for="quality">Quality</label>
			  <input type="text" class="form-control" id="" placeholder="Quality" name="quality">
		</div>
		 <div class="form-group col-sm-2">
		      <label for="price">Price</label>
			  <input type="text" class="form-control" id="" placeholder="Price" name="price">
		</div>
		<div class="col-sm-2">
	   		<button type="submit" class="btn btn-success">Register</button>
	   	</div>
	</form>
</div>

<br>
<div class="panel panel-default">
 	<table class=" table table-hover">
 		<tr>
 		{{#each header}}
 				<th class='table-header'>{{this.name}}</th>
 		{{/each}}
 		</tr>
 		{{#each result}}
 			<tr>
 			<td > <input type="text" class="form-control " value="{{this.bookCode}}" name="bookCode"disabled></td>
 			<td > <input type="text" class="form-control " value="{{this.branchNum}}" name="branchNum"disabled></td>
 			<td > <input type="text" class="form-control " value="{{this.copyNum}}" name="copyNum"disabled></td>
 			<td > <input type="text" class="form-control " value="{{this.quality}}" name="quality"></td>
 			<td > <input type="text" class="form-control " value="{{this.price}}" name="price"></td>
 				<td align="right">
	 				<a href="#" type="button" class="btn btn-danger submit-delete">Remove</a>
	 				<a href="#" type="button" class="btn btn-success submit-update">Update</a>
 				</td>
 			</tr>
 		{{/each}}
	</table>
</div>